{
    "compilerOptions": {
        "lib": ["ES2019"],
        "module": "CommonJS",
        "target": "ES2019",
        "resolveJsonModule": true,
        "noImplicitAny": true,
        "removeComments": true,
        "esModuleInterop": true,
        "outDir": "dist",
    },
    "include": [
        "src/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}